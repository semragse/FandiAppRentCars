# Environment example for Railway deployment
# Copy to .env (locally) or set in Railway dashboard

# Core
NODE_ENV=production
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/dbname
DATABASE_SSL=true
AUTO_SEED=false

# SQLite fallback (local dev only)
SQLITE_STORAGE=fandicars.db

# Stripe
STRIPE_PUBLIC_KEY=pk_live_replace_me
STRIPE_SECRET_KEY=sk_live_replace_me

# SMTP / Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail_username
SMTP_PASS=app_password_here

# PayPal
PAYPAL_BUSINESS_EMAIL=business@example.com

# Seeding control
SEED_ON_START=false
